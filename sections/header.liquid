<header class='w-full py-4 bg-white border-b border-gray-200'>
  <div class='px-4 mx-auto md:px-6 lg:px-[60px]'>
    <div class='flex items-center justify-between'>
      <div class='flex items-center justify-start flex-1'>
        <button class='block p-2 -ml-2 md:hidden' aria-label='Open menu'>
          <svg class='w-6 h-6 text-gray-700' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

        {%- if section.settings.menu_left != blank -%}
          <nav class='items-center hidden space-x-6 md:flex'>
            {% for link in linklists[section.settings.menu_left].links %}
              <a
                href='{{ link.url }}'
                class='font-medium text-gray-700 transition-colors duration-200 hover:text-gray-900'
              >
                {{- link.title -}}
              </a>
            {% endfor %}
          </nav>
        {%- endif -%}
      </div>

      <div class='flex items-center justify-center flex-shrink-0'>
        {%- if section.settings.logo != blank -%}
          <a href='{{ routes.root_url }}'>
            <img
              src='{{ section.settings.logo | image_url: width: 200 }}'
              alt='{{ shop.name }}'
              class='w-auto max-h-12'
              width='200'
              height='auto'
            >
          </a>
        {%- else -%}
          <a
            href='{{ routes.root_url }}'
            class='text-2xl font-bold text-black transition-colors duration-200 hover:text-gray-700'
          >
            {{ section.settings.logo_text | default: 'HOMECOURT' }}
          </a>
        {%- endif -%}
      </div>

      {%- if section.settings.menu_right != blank -%}
        <nav class='items-center justify-end flex-1 hidden space-x-6 md:flex'>
          {% for link in linklists[section.settings.menu_right].links %}
            <a
              href='{{ link.url }}'
              class='font-medium text-gray-700 transition-colors duration-200 hover:text-gray-900'
            >
              {{- link.title -}}
            </a>
          {% endfor %}
        </nav>
      {%- else -%}
        <div class='flex-1'></div>
      {%- endif -%}
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "HOMECOURT",
      "info": "Used when no logo image is uploaded"
    },
    {
      "type": "link_list",
      "id": "menu_left",
      "label": "Left menu",
      "default": "main-menu"
    },
    {
      "type": "link_list",
      "id": "menu_right",
      "label": "Right menu"
    }
  ]
}
{% endschema %}
