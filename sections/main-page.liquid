<section class="w-full py-12">
  <div class="container px-4 mx-auto sm:px-6 lg:px-8">
    {% if page.title != blank %}
      <header class="mb-8">
        <h1 class="text-3xl lg:text-4xl font-bold text-[#191919] mb-4">
          {{ page.title }}
        </h1>
      </header>
    {% endif %}

    {% if page.content != blank %}
      <div class="prose prose-lg max-w-none">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Main Page",
  "settings": []
}
{% endschema %}